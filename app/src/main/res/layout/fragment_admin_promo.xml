<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Upload button for horizontal slider -->
        <ImageView
            android:id="@+id/ic_upload_slider"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="end"/>

        <!-- Horizontal RecyclerView for slider images -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"/>

        <!-- Upload button for grid images -->
        <ImageView
            android:id="@+id/ic_upload_grid"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>

        <!-- Grid RecyclerView for promo images -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</ScrollView>