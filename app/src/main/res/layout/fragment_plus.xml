<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Custom Exercise Note"
        android:textSize="18sp"
        android:background="@drawable/rounded_rectangle3"

        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>

    <!-- Clickable Date Display -->
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Feb 24\nMonday"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="16dp"/>

    <!-- EditText for Note -->
    <EditText
        android:background="@color/white"
        android:id="@+id/etExerciseNote"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textColorHint="@color/DGREY"
        android:hint="Enter your exercise note for the day..."
        android:inputType="textMultiLine"
        android:minLines="5"
        android:gravity="start"
        android:layout_marginBottom="16dp"/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Note"
        android:layout_gravity="center"
        android:textSize="18sp"/>
</LinearLayout>